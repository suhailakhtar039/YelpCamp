<%include ../partials/header.ejs%>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>view handpicked camps from all around the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
			</p>
		</div>
	</header>
	<div class="row">
		<div class="col-lg-12">
			<h3 class="text">Our Most Popular Campgrounds</h3>		
		</div>
	</div>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% for(var i=0;i<campgrounds.length;i++){%>
		<div class="col-md-3 col-sm-6">	
			<div class="thumbnail">
				<img style="height: 200px; width: 300px" src="<%=campgrounds[i].image%>">
				<div class="caption">
					<h4><%= campgrounds[i].name %></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<%} %>		
	</div>

</div>
<%include ../partials/footer.ejs%>